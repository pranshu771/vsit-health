<html>
    <head>
        <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.3/semantic.min.css">
        <link rel="stylesheet" type="text/css" href="/stylesheets/app.css">
        <title>Healthapp</title>
    </head>
    <body>
        <div class="ui fixed inverted menu">
            <div class="ui container">
                <div class="header item"><i class="code icon"></i>Healthapp</div>
                <a href="/" class="item">Home</a>
            
                <%if(!currentUser){%>

                    <a href="/register" class="item">Sign in</a>
                    <a href="/login" class="item">Login</a>
            <%}else{%>
                <a href="/new" class="item">New Post</a>
                <a href="/logout" class="item">logout</a>
             <%}%>   
            </div>
        </div>
        <div class="ui main text container segment" style="margin-top: 100px;">
            <div class="ui huge header">Enter the date for which you want to see the details</div>
            <form action="/show"style="margin-top:100px" method="POST">
                <input type="date" name="user[date]"> 
            
                <input type="submit">
                </form> 
        </div>
    
    
</body>
</html>